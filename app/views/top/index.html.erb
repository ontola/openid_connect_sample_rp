<article>
  <h2><%= I18n.t('top.title') %></h2>
  <p><%= I18n.t('top.description') %></p>
  <nav class="connect">
    <ul>
      <% Provider.listable.all.each do |provider| %>
        <li>
          <%= form_tag provider_open_id_path(provider) do %>
            <%= submit_tag I18n.t('open_ids.create.title', provider: provider.name) %>
          <% end %>
        </li>
      <% end %>
    </ul>
    <div class="notice">
      <p>If your Connect provider isn't above, discover it by its OP identifier.</p>
      <%= form_tag providers_path do %>
        <%= text_field_tag :host, nil, placeholder: 'connect-op.herokuapp.com' %>
        <%= submit_tag I18n.t('providers.create.title') %>
      <% end %>
    </div>
  </nav>
</article>
